# =============================================================================
# VALIFI FINTECH PLATFORM - ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/valifi

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=5000
SESSION_SECRET=your-secure-random-session-secret-min-32-characters

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# BLOCKCHAIN & WEB3
# =============================================================================
# Infura (Ethereum node provider)
INFURA_PROJECT_ID=your-infura-project-id

# Alchemy (Alternative Ethereum provider)
ALCHEMY_API_KEY=your-alchemy-api-key

# Network RPCs (optional - defaults to public RPCs)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_ID
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# =============================================================================
# KYC VERIFICATION (Sumsub)
# =============================================================================
SUMSUB_APP_TOKEN=your-sumsub-app-token
SUMSUB_SECRET_KEY=your-sumsub-secret-key
SUMSUB_BASE_URL=https://api.sumsub.com

# =============================================================================
# BROKER INTEGRATION (Alpaca for Stocks/Forex)
# =============================================================================
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# For production trading (use with caution):
# ALPACA_BASE_URL=https://api.alpaca.markets

# =============================================================================
# CRYPTO PAYMENT PROCESSORS
# =============================================================================

# BitPay
BITPAY_API_KEY=your-bitpay-api-key
BITPAY_MERCHANT_TOKEN=your-bitpay-merchant-token

# Binance Pay
BINANCE_PAY_API_KEY=your-binance-pay-api-key
BINANCE_PAY_SECRET_KEY=your-binance-pay-secret

# Bybit
BYBIT_API_KEY=your-bybit-api-key
BYBIT_SECRET_KEY=your-bybit-secret

# KuCoin
KUCOIN_API_KEY=your-kucoin-api-key
KUCOIN_SECRET_KEY=your-kucoin-secret
KUCOIN_PASSPHRASE=your-kucoin-passphrase

# Luno
LUNO_API_KEY_ID=your-luno-key-id
LUNO_API_KEY_SECRET=your-luno-secret

# =============================================================================
# EMAIL (Optional - for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@valifi.example.com

# =============================================================================
# PRECIOUS METALS API (Optional)
# =============================================================================
METALS_API_KEY=your-metals-api-key
METALS_API_URL=https://metals-api.com/api

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
# Master key for encrypting sensitive data (wallet private keys, API secrets)
MASTER_ENCRYPTION_KEY=your-256-bit-encryption-key-base64

# JWT Secret (if using JWT instead of sessions)
JWT_SECRET=your-jwt-secret-key

# =============================================================================
# CORS & SECURITY
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
CORS_ENABLED=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Sentry (optional error tracking)
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_P2P_TRADING=true
ENABLE_NFT_FEATURES=true
ENABLE_PRECIOUS_METALS=true
ENABLE_BROKER_TRADING=true
ENABLE_CRYPTO_PAYMENTS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Set to 'true' to enable mock data for testing
USE_MOCK_DATA=false

# Disable auth for local development (NOT FOR PRODUCTION)
DISABLE_AUTH=false
